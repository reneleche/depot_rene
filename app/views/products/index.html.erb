<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Descripci√≥n</th>
      <th>Imagen url</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td> 
          <%=image_tag(product.image_url,class:'list_image')%> 
          </td>
          <td class="list_description"> 
          <dl>
            <dt>
              <%= product.title %>
            </dt> 
            <dd>
              <%= truncate(strip_tags(product.description), length: 80) %>
            </dd>
          </dl> 
        </td> 
        <td class="list_actions"> <%= link_to 'Mostrar', product %><br/> <%= link_to 'Editar', edit_product_path(product) %><br/>
        <%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Estas seguro de eliminar??' } %> 
        </td> 
        </tr> 
      <% end %> 
</table>

